<%page_title '内容分类列表'
  side_bar 'admin_console'
%>


<div class="section">
	<div class="head">
		<div class="buttons">
			<%=link_to '新建内容分类',new_admin_content_category_path(:format=>:html),'data-method'=>:get,
			   :class=>'button long'%>
		</div>
		<h2>内容分类列表</h2>
	</div>
	
	<div class="body">
		<table class="data_list">
			<tr class="head">
			  <th width='*'>名称</th>
			  <th width='30%'>适用</th>
			  <th width='30%'>操作</th>
			</tr>
			
			<%= render :partial=>'cc',:collection=>@content_categories%>
		</table>
		
		<%= will_paginate @content_categories%>
	</div>
	
</div>
