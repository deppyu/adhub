<% page_title '广告创意列表'
   side_bar 'ad_owner'
%>

<%javascript_tag do%>
$(function(){
  $('#search_form').validate();                                                               
});
<%end%>

<div class="section">
	<div class="head">
    <div class="buttons">
      <%= link_to '新建广告创意', new_ad_owner_advertisement_path(:format=>:html), :class=>'button long' %>
    </div>
    <h2>广告创意</h2>
  </div>
	
	<div class="search">
	   	<%form_tag ad_owner_advertisements_path(:format=>:html),:method=>:get,:id=>'search_form' do %>
			名称：<%= text_field_tag :name,params[:name],:size=>'20'%>
			状态：<select name="status">
				<option value="">请选择</option>
			  <%= options_for_select choice_for_ad_status%>
			</select>
		   <%= submit_tag '查询',:class=>'primary_button'%>
		<%end%>
	</div> 		
	
	<div class="body">
    <table class="data_list">
      <tr>
	<th width="*">名称</th>
	<th width="15%">类型</th>
	<th width="15%">状态</th>
	<th width="16%" class="number">展示次数/点击次数</th>
	<th width="12%" class="number">到达率</th>
	<th width="12%" class="number">已用资金</th>
	<th width="10%">操作</th>
      </tr>
      
	 <%=render :partial=>'a',:collection=>@advertisements%>
      
    </table>
    <%= will_paginate @advertisements%>
    </div>
</div>
